<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>

<body>
  <div class="container-lg">
    <div class="row">
      <div class="col-6">
        <form action="/student/add" method="post">
          <div class="mb-3">
            <label for="formGroupExampleInput" class="form-label">STUDENT</label>
            <input type="text" name="name" class="form-control" id="formGroupExampleInput1"
              placeholder="Enter your name">
          </div>
          <div class="mb-3">
            <label for="formGroupExampleInput2" class="form-label">DEPARTMENT</label>
            <input type="text" name="dept" class="form-control" id="formGroupExampleInput2"
              placeholder="Enter It's dept">
          </div>
          <button type="submit" class="btn btn-primary">ADD</button>

        </form>
      </div>
      <div class="col-6">
        <form action="/student/del" method="post">
          <div class="mb-3">
            <label for="formGroupExampleInput2" class="form-label">DELETE</label>
            <input type="number" max="{{size}}" min="0" name="del" class="form-control" id="formGroupExampleInput3"
              placeholder="Index to del" required>
          </div>
          <button type="submit" class="btn btn-danger">DELETE</button>
        </form>
      </div>
    </div>

  </div>

  <div class="container-sm">
    <h1>STUDENTS</h1>
    <table class="table table-bordered border-black">
      <tr>
        <th>NAME</th>
        <th>DEPT</th>
      </tr>
      {{#stu}}
      <tr>
        <td>{{name}}</td>
        <td>{{dept}}</td>
      </tr>
      {{/stu}}
    </table>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
    crossorigin="anonymous"></script>
</body>

</html>